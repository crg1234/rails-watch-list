<%= link_to 'Back To Lists', lists_path %>

<h1><%= @list.name %></h1>

<div class="d-flex">
  <p><% @list.bookmarks.each do |bookmark| %></p>
    <div class="card col-md-4 m-3 p-3">
    <img class="py-3" src="<%= bookmark.movie.poster_url %>" alt="">
    <h2><%= bookmark.movie.title %></h2>
    <p><%= bookmark.movie.overview %></p>
    <p><%= bookmark.movie.rating %></p>
    <p class="text-primary">What do people think about this movie? </br>
      <%= bookmark.comment %></p>
    </div>
  <% end %>
</div>

<%= link_to 'Create New Bookmark', new_list_bookmark_path(@list), class: "btn btn-primary text-white" %>
